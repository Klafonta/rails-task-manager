<div class="container">
  <h1>My Tasks</h1>
  <ul>
    <% @tasks.each do |task| %>
      <li><%= link_to task.title, task_path(task) %>
      <%= link_to '<i class="fa-solid fa-poo"></i>'.html_safe, task_path(task), data: {turbo_method: :delete, turbo_confirm: "Are you sure ?"} %>
      </li>
    <% end %>
  </ul>
  <%= link_to "Create a new task", new_path %>
</div>
